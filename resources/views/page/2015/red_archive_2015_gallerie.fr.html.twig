{% extends "eopBlogBundle:Default:red_layout.html.twig" %}

{% block body %}

{% set zoomOnPhoto = 1.5 %}
{% set i=0 %}
{% for photo in photos%}
        {% set i=i+1 %}
    {% set url=photo.url|split('/photo/')%}
    
    {% set img=url[0] ~ "/photo/thumb_" ~ url[1]%}

        <a href="{{images}}{{photo.url}}" class="fancybox-thumbs" data-fancybox-group="thumb" rel="fancybox-thumb" title="{{photo.altFr}}">
            <div style="float:left; margin:10px;position:relative;  width:200px; height:200px; background: url('{{images}}{{img}}') no-repeat; background-size: {{200 * zoomOnPhoto}}px; background-position: -{{(200 * zoomOnPhoto - 200 )/2}}px;">
                <div style="-webkit-box-sizing: border-box;-moz-box-sizing: border-box; box-sizing: border-box; border:1px solid black;width:200; height:200px;">&nbsp;</div>
            </div>
        </a>
{%endfor%}
        {%if i==0%}<div class="warning">bientot les photos de l'edition 2015</div>
        {% else %}<div style="clear:left;"></div>
        {%endif%}
        

<script type="text/javascript" src="{{js}}jquery.mousewheel-3.0.6.pack.js"></script>
<script type="text/javascript" src="{{js}}jquery.fancybox.pack.js"></script>
<script type="text/javascript" src="{{js}}jquery.fancybox-buttons.js"></script>
<script type="text/javascript" src="{{js}}jquery.fancybox-thumbs.js"></script>
<script type="text/javascript" src="{{js}}widget.js"></script>
<script type="text/javascript">
$(document).ready(function() {
        $('.fancybox-thumbs').fancybox({

            closeBtn  : true,
            arrows    : true,
            nextClick : true,

            beforeShow: function () {
                if (this.title) {
                    // New line
                    this.title += '<br /><br />';

                    // Add tweet button
                    this.title += '<a href="https://twitter.com/share" class="twitter-share-button" data-count="none" data-url="' + this.href + '">Tweet</a> ';

                    // Add FaceBook like button
                    this.title += '<iframe src="//www.facebook.com/plugins/like.php?href=' + this.href + '&amp;layout=button_count&amp;show_faces=true&amp;width=500&amp;action=like&amp;font&amp;colorscheme=light&amp;height=23" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:110px; height:23px;" allowTransparency="true"></iframe>';

                    // New line
                    this.title += '<br />';

                }
            },

            afterShow: function() {
                // Render tweet button
                twttr.widgets.load();
            },

            helpers : {
                title: {
                    type: 'inside'
                },

                thumbs : {
                        width  : 75,
                        height : 75
                },

                overlay : {
                    css : {
                        'background' : 'rgba(58, 42, 45, 0.95)'
                    }
                }
            }
        });
    });

</script>
{% endblock %}

{% block titre %}Gallerie photo 2015{% endblock %}
{% block css %}<link type="text/css" rel="stylesheet" href="{{css}}jquery.fancybox.css" media="screen"/>
        <link type="text/css" rel="stylesheet" href="{{css}}jquery.fancybox-buttons.css" media="screen"/>
        <link type="text/css" rel="stylesheet" href="{{css}}jquery.fancybox-thumbs.css" media="screen"/>
{% endblock %}
